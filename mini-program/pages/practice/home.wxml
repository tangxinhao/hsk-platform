<!-- 练习中心首页 -->
<view class="practice-home">
  <!-- 顶部渐变标题区 -->
  <view class="page-header">
    <view class="header-content">
      <text class="title-text">{{pageTitle}}</text>
      <text class="subtitle-text">{{pageSubtitle}}</text>
    </view>
    <language-switcher class="header-lang-btn"></language-switcher>
  </view>

  <!-- 等级选择卡片 -->
  <view class="level-container">
    <view class="level-grid">
      <view 
        class="level-card" 
        wx:for="{{levels}}" 
        wx:key="level"
        bindtap="selectLevel"
        data-level="{{item.level}}"
      >
        <view class="card-inner">
          <view class="level-header">
            <text class="level-name">HSK {{item.level}}级</text>
            <text class="level-emoji">{{item.emoji}}</text>
          </view>
          
          <view class="level-body">
            <text class="level-count">{{item.count}}{{questionsText}}</text>
            <text class="level-progress">{{progressText}}{{item.progress}}%</text>
          </view>
          
          <view class="level-footer">
            <text class="start-text">{{startText}}</text>
            <text class="arrow">→</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 学习统计 -->
  <view class="stats-section">
    <view class="stats-card">
      <text class="stats-title">{{weekStatsTitle}}</text>
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-value">{{weekStats.questions}}</text>
          <text class="stat-label">{{practiceCountLabel}}</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{weekStats.accuracy}}%</text>
          <text class="stat-label">{{accuracyLabel}}</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{weekStats.time}}</text>
          <text class="stat-label">{{studyTimeLabel}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
