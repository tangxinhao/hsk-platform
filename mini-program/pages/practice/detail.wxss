/* 练习-答题页面（遵循统一配色与间距） */
.practice-detail {
  min-height: 100vh;
  background: #F8F9FA;
  padding-bottom: 180rpx;
}

/* 顶部进度 */
.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
}

.level-badge {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-weight: 600;
}

/* Loading */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #E5E5EA;
  border-top-color: #5B9FD7;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #6D6D73;
}

/* 题目容器 */
.question-container {
  padding: 32rpx 24rpx;
}

/* 类型标签 */
.type-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background: #F8F9FA;
  color: #1D1D1F;
  border-radius: 12rpx;
  border: 1rpx solid #E5E5EA;
  margin-bottom: 24rpx;
  font-weight: 600;
}

/* 音频播放器 */
.audio-section {
  margin-bottom: 24rpx;
}

.audio-player {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #E5E5EA;
}

.audio-icon {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  border-radius: 50%;
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #FFFFFF;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.audio-title {
  font-size: 28rpx;
  color: #1D1D1F;
  margin-bottom: 6rpx;
  font-weight: 600;
}

.audio-duration {
  font-size: 24rpx;
  color: #6D6D73;
}

/* 题目图片 */
.question-image {
  margin-bottom: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #E5E5EA;
}

.question-image image {
  width: 100%;
  height: 360rpx;
  object-fit: cover;
}

/* 题目内容 */
.question-content {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #E8F4FF;
  position: relative;
}

.question-content::before {
  content: '"';
  position: absolute;
  top: 16rpx;
  left: 20rpx;
  font-size: 60rpx;
  color: #5B9FD7;
  opacity: 0.15;
  font-weight: 700;
  line-height: 1;
}

.content-text {
  font-size: 32rpx;
  color: #1D1D1F;
  line-height: 1.8;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

/* 选项列表 */
.options-list {
  margin-bottom: 32rpx;
}

/* 输入框区域 */
.answer-input-section {
  margin-bottom: 32rpx;
}

.answer-input {
  width: 100%;
  min-height: 200rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #E8F4FF;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  font-size: 30rpx;
  line-height: 1.7;
  color: #1D1D1F;
  box-sizing: border-box;
}

.answer-input:focus {
  border-color: #5B9FD7;
}

.input-hint {
  display: flex;
  justify-content: flex-end;
  padding: 12rpx 20rpx 0;
}

.char-count {
  font-size: 24rpx;
  color: #6D6D73;
}

.option-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 24rpx;
  min-height: 88rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #E5E5EA;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 图片选项特殊样式 */
.option-item.has-image {
  flex-direction: column;
  align-items: stretch;
  padding: 20rpx;
}

.option-item.has-image .option-label {
  align-self: flex-start;
  margin-bottom: 12rpx;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  background: linear-gradient(135deg, #E8F4FF 0%, #D6EBFF 100%);
  border-color: #5B9FD7;
  border-width: 3rpx;
  box-shadow: 0 8rpx 20rpx rgba(91, 159, 215, 0.25);
}

.option-label {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #FFFFFF;
  color: #5B9FD7;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: 700;
  margin-right: 24rpx;
  border: 3rpx solid #5B9FD7;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #5B9FD7;
  color: #FFFFFF;
  border-color: #5B9FD7;
}

.option-text {
  flex: 1;
  font-size: 32rpx;
  color: #1D1D1F;
  line-height: 1.7;
  font-weight: 600;
  word-break: break-all;
  padding: 8rpx 0;
}

.option-item.selected .option-text {
  color: #1D1D1F;
  font-weight: 700;
}

/* 图片选项 */
.option-image {
  flex: 1;
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  object-fit: contain;
  background: #F8F9FA;
  padding: 12rpx;
  box-sizing: border-box;
}

.option-check {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #FFFFFF;
  background: #5B9FD7;
  border-radius: 50%;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-weight: 700;
}

/* 答案与解析 */
.answer-section {
  margin-bottom: 32rpx;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.answer-card {
  padding: 32rpx;
  border-radius: 20rpx;
  border: 3rpx solid #E5E5EA;
  background: #FFFFFF;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.answer-card.correct {
  border-color: #34C759;
  background: linear-gradient(135deg, #F0FFF4 0%, #E8F9ED 100%);
}

.answer-card.wrong {
  border-color: #FF9500;
  background: linear-gradient(135deg, #FFF9F0 0%, #FFF3E8 100%);
}

.answer-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.answer-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #FFFFFF;
}

.answer-card.correct .answer-icon {
  background: #34C759;
}

.answer-card.wrong .answer-icon {
  background: #FF9500;
}

.answer-label {
  font-size: 28rpx;
  font-weight: 700;
  color: #1D1D1F;
}

.answer-card.correct .answer-label {
  color: #34C759;
}

.answer-card.wrong .answer-label {
  color: #FF9500;
}

.answer-detail {
  margin-bottom: 12rpx;
}

.answer-text {
  font-size: 28rpx;
  color: #1D1D1F;
  line-height: 1.7;
  display: block;
  margin-bottom: 8rpx;
}

.explanation {
  padding: 16rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border: 1rpx solid #E5E5EA;
}

.explanation-label {
  font-size: 26rpx;
  color: #6D6D73;
  font-weight: 600;
  margin-bottom: 6rpx;
  display: block;
}

.explanation-text {
  font-size: 26rpx;
  color: #6D6D73;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,1) 100%);
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn::after {
  border: none;
}

.btn:active {
  transform: scale(0.96);
}

.btn-primary {
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  border-color: transparent;
}

.btn-secondary {
  background: #FFFFFF;
  color: #5B9FD7;
  border-color: #5B9FD7;
}
