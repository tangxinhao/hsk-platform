/* 练习首页 - 现代化设计 */

page {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
  min-height: 100vh;
}

.practice-home {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部渐变标题区 */
.page-header {
  padding: 80rpx 40rpx 100rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.header-content {
  position: relative;
  z-index: 2;
  flex: 1;
}

.header-lang-btn {
  flex-shrink: 0;
  z-index: 2;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 等级卡片容器 */
.level-container {
  margin-top: -60rpx;
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
}

.level-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.level-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.level-card:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.card-inner {
  padding: 40rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  min-height: 280rpx;
}

.level-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.level-name {
  font-size: 38rpx;
  font-weight: 700;
  color: #1A1A1A;
  line-height: 1.2;
}

.level-emoji {
  font-size: 56rpx;
  line-height: 1;
}

.level-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.level-count {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 600;
}

.level-progress {
  font-size: 24rpx;
  color: #999999;
  font-weight: 400;
}

.level-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  padding: 20rpx 0;
  border-radius: 20rpx;
  gap: 8rpx;
}

.start-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.arrow {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* 学习统计区域 */
.stats-section {
  padding: 48rpx 32rpx 32rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.stats-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 40rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4A8BC2;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
  text-align: center;
}
