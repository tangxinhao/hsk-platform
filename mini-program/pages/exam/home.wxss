/* 考试首页 - 现代化设计 */

page {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
}

.exam-home {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 页面标题 - 渐变背景 */
.page-title {
  background: transparent;
  padding: 80rpx 40rpx 100rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.title-content {
  flex: 1;
  text-align: center;
}

.title-lang-btn {
  flex-shrink: 0;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 考试列表 - 精致卡片 */
.exam-list {
  padding: 0 32rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.exam-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.exam-card:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F1F3F5;
}

.exam-level {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: 0.5rpx;
}

.exam-emoji {
  font-size: 40rpx;
  opacity: 0.9;
}

/* 考试信息 - 精致行 */
.exam-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 10rpx 14rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 26rpx;
  margin-right: 12rpx;
  width: 26rpx;
  text-align: center;
  opacity: 0.8;
}

.info-text {
  font-size: 26rpx;
  color: #6D6D73;
  font-weight: 500;
}

/* 考试部分标签 - 微妙设计 */
.exam-parts {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 24rpx;
}

.part-tag {
  padding: 8rpx 16rpx;
  background: #F8F9FA;
  color: #6D6D73;
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 10rpx;
  border: 1rpx solid #F1F3F5;
}

/* 开始考试按钮 - 精致设计 */
.start-exam-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(74, 139, 194, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 1rpx;
}

.start-exam-btn::after {
  border: none;
}

.start-exam-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(74, 139, 194, 0.4);
}

/* 考试历史 - 精致列表 */
.exam-history {
  margin: 0 32rpx 32rpx;
}

.history-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.history-item {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.history-item:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-level {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.history-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #34C759;
  letter-spacing: -0.5rpx;
}

.history-date {
  font-size: 22rpx;
  color: #C7C7CC;
}
