/* 考试页面 */
.exam-page {
  min-height: 100vh;
  background: #F8F9FA;
  padding-bottom: 150rpx;
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  position: sticky;
  top: 0;
  z-index: 100;
}

.timer {
  font-size: 36rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.progress {
  font-size: 30rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.question-content {
  padding: 32rpx 24rpx;
}

.type-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #E8F4FF 0%, #D6EBFF 100%);
  color: #4A8BC2;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #5B9FD7;
  font-weight: 600;
}

.audio-section {
  margin-bottom: 24rpx;
}

.audio-player {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #E8F4FF;
  transition: all 0.3s;
}

.audio-player:active {
  transform: scale(0.98);
}

.audio-icon {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #FFFFFF;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  border-radius: 50%;
  flex-shrink: 0;
}

.audio-text {
  font-size: 30rpx;
  color: #1D1D1F;
  font-weight: 600;
}

.question-text {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  font-size: 32rpx;
  line-height: 1.8;
  color: #1D1D1F;
  border: 2rpx solid #E8F4FF;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  font-weight: 600;
  position: relative;
}

.question-text::before {
  content: '"';
  position: absolute;
  top: 16rpx;
  left: 20rpx;
  font-size: 60rpx;
  color: #5B9FD7;
  opacity: 0.15;
  font-weight: 700;
  line-height: 1;
}

.options-list {
  margin-bottom: 32rpx;
}

/* 输入框区域 */
.answer-input-section {
  margin-bottom: 32rpx;
}

.answer-input {
  width: 100%;
  min-height: 200rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #E8F4FF;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  font-size: 30rpx;
  line-height: 1.7;
  color: #1D1D1F;
  box-sizing: border-box;
}

.answer-input:focus {
  border-color: #5B9FD7;
}

.input-hint {
  display: flex;
  justify-content: flex-end;
  padding: 12rpx 20rpx 0;
}

.char-count {
  font-size: 24rpx;
  color: #6D6D73;
}

.option-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 24rpx;
  min-height: 88rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #E5E5EA;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 图片选项特殊样式 */
.option-item.has-image {
  flex-direction: column;
  align-items: stretch;
  padding: 20rpx;
}

.option-item.has-image .option-label {
  align-self: flex-start;
  margin-bottom: 12rpx;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  border-color: #5B9FD7;
  border-width: 3rpx;
  background: linear-gradient(135deg, #E8F4FF 0%, #D6EBFF 100%);
  box-shadow: 0 8rpx 20rpx rgba(91, 159, 215, 0.25);
}

.option-label {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #FFFFFF;
  color: #5B9FD7;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: 700;
  margin-right: 24rpx;
  border: 3rpx solid #5B9FD7;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #5B9FD7;
  color: #FFFFFF;
  border-color: #5B9FD7;
}

.option-text {
  flex: 1;
  font-size: 32rpx;
  color: #1D1D1F;
  line-height: 1.7;
  font-weight: 600;
  word-break: break-all;
  padding: 8rpx 0;
}

.option-item.selected .option-text {
  color: #1D1D1F;
  font-weight: 700;
}

/* 图片选项 */
.option-image {
  flex: 1;
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  object-fit: contain;
  background: #F8F9FA;
  padding: 12rpx;
  box-sizing: border-box;
}

.exam-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,1) 100%);
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.nav-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 2rpx solid #5B9FD7;
  background: #FFFFFF;
  color: #5B9FD7;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nav-btn::after {
  border: none;
}

.nav-btn:active {
  transform: scale(0.96);
}

.nav-btn.primary {
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #fff;
  border-color: transparent;
}
