/* 问题列表页面样式 */
.question-container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

/* 筛选区域 */
.filter-area {
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-item {
  background-color: #fff;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #606266;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  flex: 1;
  margin: 0 10rpx;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.search-input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  background-color: #fff;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

/* 问题列表 */
.question-list {
  padding-bottom: 30rpx;
}

.question-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-type-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #fff;
}

.question-level {
  font-size: 24rpx;
  color: #909399;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 30rpx;
  color: #303133;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.question-options {
  margin-top: 20rpx;
}

.option-item {
  display: flex;
  margin-bottom: 15rpx;
}

.option-label {
  font-size: 28rpx;
  color: #409eff;
  margin-right: 10rpx;
  font-weight: bold;
  min-width: 40rpx;
}

.option-text {
  font-size: 28rpx;
  color: #606266;
  flex: 1;
}

.question-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #ebeef5;
}

.question-category {
  font-size: 24rpx;
  color: #909399;
  background-color: #f5f7fa;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.question-arrow {
  width: 40rpx;
  height: 40rpx;
}

.question-arrow image {
  width: 100%;
  height: 100%;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #409eff;
}

.load-more-end {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #909399;
} 