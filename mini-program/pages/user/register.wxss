/* 注册页面 - 与登录页统一精致设计 */

/* 让整个页面高度固定为一屏，禁止滚动 */
page {
  height: 100%;
  overflow: hidden;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
}

.register-container {
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 稍微向下放一点，让布局更舒展 */
  justify-content: flex-start;
  /* 适中左右留白：不贴边，也不过宽 */
  padding: 80rpx 80rpx 32rpx;
}

.header-bg {
  display: none;
}

.wave {
  display: none;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.logo-circle {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 
    0 8rpx 32rpx -8rpx rgba(52, 199, 89, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2),
    0 0 0 1rpx rgba(52, 199, 89, 0.1);
}

.logo-icon {
  font-size: 52rpx;
}

.app-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.app-slogan {
  font-size: 22rpx;
  color: #86868B;
  letter-spacing: 0.3rpx;
}

/* 表单卡片 */
.form-card {
  width: 100%;
  max-width: 640rpx;
  /* 左右再多留一些空间，让整体更轻松 */
  padding: 40rpx 40rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 
    0 2rpx 12rpx -2rpx rgba(0, 0, 0, 0.08),
    0 0 1rpx rgba(0, 0, 0, 0.04);
}

.form-header {
  margin-bottom: 32rpx;
}

.form-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.form-subtitle {
  font-size: 22rpx;
  color: #86868B;
}

/* 输入框组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 100rpx;
  /* 左右内边距稍微加大一点，让文字不要贴边 */
  padding: 0 32rpx;
  background: #F8F9FA;
  border: 1rpx solid #E5E5EA;
  border-radius: 18rpx;
  margin-bottom: 14rpx;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.input-wrapper:focus-within {
  background: #FFFFFF;
  border-color: #5B9FD7;
  box-shadow: 
    0 0 0 3rpx rgba(91, 159, 215, 0.12),
    0 2rpx 10rpx -2rpx rgba(91, 159, 215, 0.25);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 32rpx;
  text-align: center;
  opacity: 0.5;
  transition: opacity 0.25s ease;
}

.input-wrapper:focus-within .input-icon {
  opacity: 1;
}

.input-field {
  flex: 1;
  height: 100%;
  /* 输入文字稍微大一点 */
  font-size: 32rpx;
  text-align: left;
  color: #1D1D1F;
}

.input-placeholder {
  color: #C7C7CC;
}

/* 注册按钮 */
.register-btn {
  /* 按钮本身不要占满整行，改为中间一块，居中显示“立即注册” */
  width: 80%;
  max-width: 420rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  border-radius: 22rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  margin: 0 auto 24rpx;
  box-shadow: 
    0 6rpx 20rpx -6rpx rgba(52, 199, 89, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  letter-spacing: 0.5rpx;
}

.register-btn::after {
  border: none;
}

.register-btn:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 12rpx -4rpx rgba(91, 159, 215, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
}

.register-btn.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* 登录提示 */
.login-hint {
  text-align: center;
  padding: 20rpx 0 4rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #86868B;
}

.login-link {
  font-size: 30rpx;
  color: #5B9FD7;
  font-weight: 600;
  margin-left: 12rpx;
}

/* 底部信息 */
.footer-info {
  margin-top: auto;
  padding: 32rpx 0;
  text-align: center;
}

.footer-text {
  font-size: 22rpx;
  color: #C7C7CC;
}
