/* 用户页面 - 现代化设计 */

page {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
}

.user-page {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 顶部语言切换 */
.page-top {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.page-lang-btn {
  /* 样式继承自组件 */
}

/* 顶部个人背景区 */
.user-card {
  background: transparent;
  padding: 80rpx 48rpx 140rpx;
  display: flex;
  align-items: center;
}

.user-avatar-wrap {
  margin-right: 32rpx;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  background: #FFFFFF;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.user-id, .user-tip {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录/退出按钮 */
.login-btn, .logout-btn {
  background: rgba(255, 255, 255, 0.15);
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 统计卡片 - 悬浮超大圆角 */
.stats-grid {
  margin: -80rpx 32rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 48rpx 20rpx;
  display: flex;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4A8BC2;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}

/* 功能列表区 */
.menu-section {
  margin: 0 32rpx 32rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1D1D1F;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.menu-list {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 12rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
  transition: all 0.2s ease;
}

.menu-item:active {
  background: rgba(91, 159, 215, 0.05);
}

.menu-item:not(:last-child) {
  border-bottom: 1rpx solid #F2F2F7;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.menu-badge {
  background: #FF3B30;
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
}

.menu-arrow {
  color: #C7C7CC;
  font-size: 36rpx;
}

.version-info {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #C7C7CC;
}
