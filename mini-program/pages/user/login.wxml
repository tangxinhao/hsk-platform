<view class="login-container">
  <!-- 顶部装饰 -->
  <view class="header-bg">
    <view class="wave"></view>
  </view>

  <!-- Logo和标题 -->
  <view class="logo-section">
    <view class="logo-circle">
      <text class="logo-icon">📚</text>
    </view>
    <text class="app-name">HSK学习助手</text>
    <text class="app-slogan">让汉语学习更简单</text>
  </view>

  <!-- 登录表单 -->
  <view class="form-card">
    <view class="form-header">
      <text class="form-title">欢迎回来</text>
      <text class="form-subtitle">登录您的账户</text>
    </view>

    <view class="input-group">
      <view class="input-wrapper">
        <text class="input-icon">👤</text>
        <input
          class="input-field"
          placeholder="请输入用户名"
          value="{{username}}"
          data-field="username"
          bindinput="onInput"
          placeholder-class="input-placeholder"
        />
      </view>

      <view class="input-wrapper">
        <text class="input-icon">🔒</text>
        <input
          class="input-field"
          placeholder="请输入密码"
          password
          value="{{password}}"
          data-field="password"
          bindinput="onInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <button 
      class="login-btn {{loading ? 'loading' : ''}}" 
      loading="{{loading}}" 
      bindtap="handleLogin"
      disabled="{{loading}}"
    >
      {{loading ? '登录中...' : '登录'}}
    </button>

    <view class="register-hint">
      <text class="hint-text">还没有账号？</text>
      <navigator url="/pages/user/register" class="register-link">立即注册</navigator>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="footer-info">
    <text class="footer-text">安全登录 · 数据加密</text>
  </view>
</view>
