/* pages/user/dashboard/dashboard.wxss */

.dashboard-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 顶部问候 */
.header-section {
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.greeting {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.greeting-text {
  flex: 1;
}

.hello {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.level {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 学习目标卡片 */
.goal-card {
  margin: -40rpx 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.goal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.goal-target {
  font-size: 28rpx;
  color: #5B9FD7;
}

.goal-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background-color: #EBEEF5;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #5B9FD7 0%, #4A8BC2 100%);
  transition: width 0.3s;
}

.progress-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #5B9FD7;
  width: 80rpx;
  text-align: right;
}

.goal-info {
  display: flex;
  justify-content: space-between;
}

.goal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goal-label {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 10rpx;
}

.goal-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

/* 设置目标按钮 */
.set-goal-btn {
  margin: -40rpx 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  color: #5B9FD7;
  font-size: 30rpx;
}

/* 统计卡片 */
.stats-section {
  margin: 0 30rpx 20rpx;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 0;
  display: flex;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #909399;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #EBEEF5;
  align-self: center;
}

/* 图表区域 */
.chart-section {
  margin: 0 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.date-selector {
  display: flex;
  gap: 20rpx;
}

.date-selector text {
  font-size: 26rpx;
  color: #909399;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.date-selector .active {
  color: #5B9FD7;
  background-color: #E8F4FF;
}

ec-canvas {
  width: 100%;
  height: 400rpx;
}

/* 分类掌握情况 */
.category-section {
  margin: 0 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.category-list {
  margin-top: 20rpx;
}

.category-item {
  margin-bottom: 30rpx;
}

.category-item:last-child {
  margin-bottom: 0;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
}

.category-accuracy {
  font-size: 28rpx;
  font-weight: bold;
}

.category-progress {
  margin-bottom: 10rpx;
}

.category-stats {
  display: flex;
  gap: 30rpx;
}

.category-stat {
  font-size: 24rpx;
  color: #909399;
}

/* 快捷入口 */
.quick-actions {
  margin: 0 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-icon image {
  width: 50rpx;
  height: 50rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #F56C6C;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.action-label {
  font-size: 24rpx;
  color: #606266;
}

/* 最近活动 */
.activity-section {
  margin: 0 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.activity-list {
  margin-top: 20rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.activity-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.activity-icon.correct {
  background-color: #F0F9FF;
}

.activity-icon.wrong {
  background-color: #FEF0F0;
}

.activity-icon image {
  width: 30rpx;
  height: 30rpx;
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.activity-text {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-time {
  font-size: 24rpx;
  color: #909399;
}

.empty-activity {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-activity image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-activity text {
  font-size: 28rpx;
  color: #909399;
}
