/* 设置页面 */
.settings-page {
  min-height: 100vh;
  background: #F2F2F7;
  padding: 32rpx;
}

.settings-group {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 12rpx 0;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-label {
  font-size: 30rpx;
  color: #1D1D1F;
  font-weight: 600;
}

.settings-value {
  font-size: 28rpx;
  color: #8E8E93;
}
