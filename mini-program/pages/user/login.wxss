/* 登录页面 - 直流风格 */

.login-container {
  min-height: 100vh;
  background: #FFFFFF;
}

/* 顶部品牌大色块 */
.logo-section {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  padding-bottom: 40rpx;
}

.logo-circle {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10rpx);
}

.logo-icon {
  font-size: 64rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录表单 - 移除背景卡片，改为直接在页面上 */
.form-card {
  /* 与注册页保持相近的左右留白，整体更协调 */
  width: 100%;
  max-width: 620rpx;   /* 比 600rpx 略宽一点，留白适中 */
  padding: 80rpx 56rpx;
  margin: -40rpx auto 0;  /* 居中并在两侧留出空白 */
}

.form-header {
  margin-bottom: 60rpx;
}

.form-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1D1D1F;
  margin-bottom: 16rpx;
}

.form-subtitle {
  font-size: 28rpx;
  color: #8E8E93;
}

/* 输入框 - 直流风格的圆润设计 */
.input-group {
  margin-bottom: 60rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 112rpx;
  padding: 0 40rpx;
  background: #F2F2F7;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input-wrapper:focus-within {
  background: #FFFFFF;
  border-color: #5B9FD7;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

/* 登录按钮 - 超大圆角主色 */
.login-btn {
  /* 居中显示“立即登录”，宽度与注册页按钮接近 */
  width: 80%;
  max-width: 420rpx;
  height: 112rpx;
  line-height: 112rpx;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  box-shadow: 0 16rpx 32rpx rgba(42, 110, 187, 0.25);
  margin: 0 auto 40rpx;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.register-hint {
  text-align: center;
  padding-top: 8rpx;
}

.hint-text {
  font-size: 30rpx;
  color: #8E8E93;
}

.register-link {
  font-size: 30rpx;
  color: #5B9FD7;
  font-weight: 700;
  margin-left: 14rpx;
}

.footer-info {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #C7C7CC;
}
