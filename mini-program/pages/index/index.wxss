/* 首页 - 现代化设计 */

page {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
}

.index-page {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 顶部深色背景区 */
.welcome-card {
  background: transparent;
  padding: 60rpx 40rpx 100rpx;
  position: relative;
}

.welcome-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.user-info {
  flex: 1;
}

.lang-btn {
  flex-shrink: 0;
}

.greeting {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.study-tip {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.welcome-emoji {
  font-size: 80rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.1));
}

/* 今日学习 - 悬浮超大圆角卡片 */
.progress-card {
  margin: -60rpx 32rpx 28rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
  position: relative;
  z-index: 10;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.progress-percent {
  font-size: 40rpx;
  font-weight: 700;
  color: #4A8BC2;
}

.progress-bar {
  height: 12rpx;
  background: #F2F2F7;
  border-radius: 999rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  border-radius: 999rpx;
  transition: width 1s cubic-bezier(0.23, 1, 0.32, 1);
}

.progress-text {
  font-size: 24rpx;
  color: #6D6D73;
  font-weight: 500;
}

/* 快速入口 - 精致大图标卡片 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 32rpx 28rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 36rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-item:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.action-icon {
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 52rpx;
  background: linear-gradient(135deg, #E8F4FF 0%, #D6EBFF 100%);
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 600;
}

/* 学习统计 - 极简条形设计 */
.stats-card {
  margin: 0 32rpx 28rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #4A8BC2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}

/* HSK等级 - 流线型徽章 */
.level-card {
  margin: 0 32rpx 32rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.level-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.level-badge {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #4A8BC2;
  background: linear-gradient(135deg, #E8F4FF 0%, #D6EBFF 100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(74, 139, 194, 0.1);
}

.level-badge:active {
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(74, 139, 194, 0.3);
}

/* 选中状态（如果需要）*/
.level-active {
  background: linear-gradient(135deg, #5B9FD7 0%, #4A8BC2 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(74, 139, 194, 0.3);
}
