/* 中国文化列表页面样式 */
.culture-container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

.language-btn {
  flex-shrink: 0;
}

/* 分类标签页 */
.category-tabs {
  display: flex;
  white-space: nowrap;
  background-color: #fff;
  padding: 20rpx 0;
  margin: 0 -20rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 10;
}

.category-tab {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #606266;
  position: relative;
  transition: all 0.3s;
  white-space: nowrap;
  min-width: 100rpx;
  text-align: center;
  flex-shrink: 0;
  border-radius: 8rpx;
  background-color: transparent;
}

.category-tab.active {
  color: #5B9FD7;
  font-weight: bold;
  background-color: #E8F4FF;
  border: 2rpx solid #5B9FD7;
}

.category-tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #5B9FD7;
  border-radius: 2rpx;
}

/* 文化内容列表 */
.culture-list {
  padding-bottom: 30rpx;
}

.culture-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.culture-image {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
  display: block;
}

.culture-info {
  padding: 20rpx;
}

.culture-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 10rpx;
  display: block;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.culture-desc {
  font-size: 26rpx;
  color: #606266;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.culture-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.culture-level {
  display: flex;
  align-items: center;
}

.level-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.culture-level text {
  font-size: 24rpx;
  color: #909399;
}

.culture-date {
  font-size: 24rpx;
  color: #909399;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #E5E5EA;
  border-top-color: #5B9FD7;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #5B9FD7;
}

.load-more-end {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #909399;
} 