page {
  background: linear-gradient(180deg, #5B9FD7 0%, #4A8BC2 100%);
}

.culture-home {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 页面头部 */
.page-header {
  background: transparent;
  padding: 80rpx 40rpx 100rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.header-content {
  position: relative;
  z-index: 2;
  flex: 1;
}

.header-lang-btn {
  flex-shrink: 0;
  z-index: 3;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 移除.header-decoration */

/* 区块样式 */
.section {
  margin-top: 40rpx;
  padding: 0 32rpx;
}

.section:first-of-type {
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section-more .arrow {
  font-size: 40rpx;
  margin-left: 4rpx;
}

/* 菜系网格 */
.cuisines-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.cuisine-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.cuisine-card:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.cuisine-emoji {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.cuisine-info {
  margin-bottom: 12rpx;
}

.cuisine-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.cuisine-region {
  font-size: 24rpx;
  color: #999;
}

.cuisine-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 分类滚动 */
.categories-scroll {
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx;
}

.categories-list {
  display: inline-flex;
  gap: 20rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  min-width: 160rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.category-level {
  font-size: 22rpx;
  color: #999;
  padding: 4rpx 16rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
}

/* 推荐列表 */
.recommended-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommended-item {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.recommended-item:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.recommended-image {
  width: 200rpx;
  height: 150rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.recommended-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommended-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recommended-meta {
  display: flex;
  gap: 16rpx;
  margin-top: 12rpx;
}

.meta-tag,
.meta-level {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.meta-tag {
  background: #e8f4ff;
  color: #1989fa;
}

.meta-level {
  background: #fff7e8;
  color: #ff976a;
}

/* 加载状态 */
.loading-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(91, 159, 215, 0.2);
  border-top-color: #5B9FD7;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
