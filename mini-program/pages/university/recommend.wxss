.recommend-container {
  background: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  position: relative;
}

.header-content {
  margin-bottom: 24rpx;
}

.header-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.header-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
}

.action-text {
  font-size: 26rpx;
  color: #fff;
}

/* 偏好信息摘要 */
.preference-summary {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  margin: -20rpx 32rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.preference-item {
  flex: 1;
  text-align: center;
}

.preference-item .label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.preference-item .value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

/* 推荐列表 */
.recommendations-list {
  padding: 0 32rpx;
}

/* 院校卡片 */
.university-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s;
}

.university-card:active {
  transform: scale(0.98);
}

/* 匹配度标签 */
.match-badge {
  position: absolute;
  top: 0;
  right: 32rpx;
  padding: 16rpx 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.match-score {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
  margin-bottom: 4rpx;
}

.match-label {
  display: block;
  font-size: 20rpx;
  color: #fff;
}

/* 院校头部 */
.university-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.university-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.university-info {
  flex: 1;
  padding-right: 80rpx;
}

.university-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.university-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.meta-item {
  padding: 0 4rpx;
}

.meta-divider {
  margin: 0 8rpx;
}

/* 院校描述 */
.university-desc {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 标签 */
.university-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.tag:first-child {
  background: #fff7e8;
  color: #ff976a;
  font-weight: bold;
}

/* 匹配原因 */
.match-reasons {
  background: #f7f8fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.reasons-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.reasons-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reason-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* HSK要求 */
.hsk-requirement {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.requirement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.requirement-item .label {
  font-size: 26rpx;
  color: #666;
}

.requirement-item .value {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.requirement-item .value.success {
  background: #e8f9f0;
  color: #07c160;
}

.requirement-item .value.warning {
  background: #fff7e8;
  color: #ff976a;
}

/* 空状态 */
.empty-state {
  padding: 200rpx 40rpx;
}

/* 偏好设置弹窗 */
.preference-dialog {
  padding: 40rpx 32rpx 32rpx;
  background: #fff;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.preference-form {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #ee0a24;
  margin-left: 4rpx;
}

.picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.dialog-actions {
  display: flex;
  gap: 24rpx;
}

.dialog-actions van-button {
  flex: 1;
}
