/**index.wxss**/
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

/* 用户信息区域 */
.user-info-section {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.greeting {
  display: flex;
  flex-direction: column;
}

.greeting text:first-child {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
}

.login-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #4285f4;
  color: #fff;
  line-height: 1.5;
}

/* 今日目标卡片 */
.today-goal-card {
  background: linear-gradient(135deg, #4285f4, #34a853);
  border-radius: 16rpx;
  padding: 30rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(66, 133, 244, 0.2);
}

.goal-header {
  margin-bottom: 20rpx;
}

.goal-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.goal-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.goal-progress-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goal-progress-circle {
  background: rgba(255,255,255,0.2);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 4rpx solid rgba(255,255,255,0.4);
}

.goal-percentage {
  font-size: 32rpx;
  font-weight: bold;
}

.goal-time {
  font-size: 20rpx;
  opacity: 0.8;
}

.goal-bar {
  flex: 1;
  height: 16rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 8rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.goal-bar-inner {
  height: 100%;
  background: white;
  border-radius: 8rpx;
}

/* 学习提示 */
.study-tip-container {
  display: flex;
  align-items: center;
  background: #fff9e6;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #fbbc04;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.study-tip {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 章节标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  padding-left: 20rpx;
  color: #333;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 8rpx;
  background: #4285f4;
  border-radius: 4rpx;
}

.more-link {
  font-size: 26rpx;
  color: #4285f4;
}

/* 功能入口 */
.entrance-section {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding: 20rpx 0;
}

.entrance-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #e6f2ff;
  color: #4285f4;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.entrance-item text:last-child {
  font-size: 26rpx;
  color: #333;
}

/* 学习统计 */
.stats-container {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  padding: 16rpx 0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4285f4;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 最近学习区域 */
.recent-list {
  width: 100%;
}

.recent-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.recent-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recent-info {
  flex: 1;
}

.recent-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
  color: #333;
}

.recent-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #4285f4;
  border-radius: 5rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐内容 */
.recommended-scroll {
  width: 100%;
  white-space: nowrap;
}

.recommended-container {
  padding: 10rpx 0;
  display: inline-flex;
}

.recommended-item {
  width: 300rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: inline-block;
}

.recommended-image {
  width: 300rpx;
  height: 180rpx;
}

.recommended-info {
  padding: 16rpx;
}

.recommended-type {
  font-size: 22rpx;
  color: #4285f4;
  background: #e6f2ff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}

.recommended-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
} 