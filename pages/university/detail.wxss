/* pages/university/detail.wxss */
.container {
  padding: 0 0 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 加载状态 */
.loading-state {
  padding: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
  border-top-color: #0066cc;
  animation: spin 0.8s linear infinite;
}

.loading-state text {
  color: #999;
  font-size: 28rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 大学头部 */
.university-header {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}

.university-banner {
  width: 100%;
  height: 100%;
  filter: brightness(0.85);
}

.university-badge-container {
  position: absolute;
  bottom: -60rpx;
  left: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.university-badge {
  width: 100rpx;
  height: 100rpx;
}

/* 大学标题区域 */
.university-title-container {
  background-color: #fff;
  padding: 30rpx 30rpx 30rpx 170rpx;
  margin-bottom: 20rpx;
}

.university-title {
  margin-bottom: 16rpx;
}

.university-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.university-english {
  font-size: 24rpx;
  color: #999;
}

.university-tags {
  display: flex;
  flex-wrap: wrap;
}

.university-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background-color: #f0f8ff;
  color: #0066cc;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 快速信息 */
.quick-info {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-right: none;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

/* 标签栏 */
.tab-container {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #0066cc;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #0066cc;
}

/* 内容区域 */
.content-area {
  padding: 20rpx;
}

.tab-content {
  min-height: 300rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 学校简介 */
.university-description {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 联系方式 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 14rpx 0;
  font-size: 28rpx;
  color: #333;
}

.contact-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.contact-action {
  width: 32rpx;
  height: 32rpx;
  margin-left: auto;
  opacity: 0.5;
}

/* 院系专业 */
.major-list {
  display: flex;
  flex-wrap: wrap;
}

.major-item {
  display: flex;
  align-items: center;
  width: 50%;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.major-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.7;
}

/* 招生政策 */
.admission-year {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
}

.admission-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.admission-link {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #0066cc;
}

.link-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

/* 校园风光 */
.scenery-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.scenery-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.scenery-image {
  width: 100%;
  height: 220rpx;
  display: block;
}

.scenery-info {
  padding: 16rpx;
}

.scenery-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.scenery-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 加载中(小) */
.loading-mini {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 错误状态 */
.error-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-state text {
  color: #999;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.retry-button {
  font-size: 28rpx;
  background-color: #0066cc;
  color: white;
  padding: 10rpx 60rpx;
  border-radius: 40rpx;
} 