/* pages/university/university.wxss */
.container {
  padding: 0 0 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  position: relative;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  background-color: #fff;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin: 20rpx 30rpx 30rpx;
}

.search-input {
  background-color: #f0f0f0;
  border-radius: 40rpx;
  padding: 16rpx 20rpx 16rpx 70rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-container {
  white-space: nowrap;
  flex: 1;
  padding: 0 20rpx;
}

.tab {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.tab.active {
  color: #0066cc;
  background-color: #e6f2ff;
  font-weight: 500;
}

.region-filter {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-left: 2rpx solid #f0f0f0;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 地区选择器 */
.region-picker {
  position: absolute;
  right: 0;
  top: 180rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 300rpx;
  max-height: 600rpx;
  overflow-y: auto;
  z-index: 100;
  transform: translateY(-20rpx);
  opacity: 0;
  transition: all 0.3s;
  pointer-events: none;
}

.region-picker.show {
  transform: translateY(0);
  opacity: 1;
  pointer-events: auto;
}

.region-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.region-item:last-child {
  border-bottom: none;
}

.region-item.active {
  color: #0066cc;
  background-color: #f5f9ff;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 大学列表 */
.university-list {
  padding: 20rpx 30rpx;
}

.university-item {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.university-badge {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.university-info {
  flex: 1;
}

.university-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.university-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.university-ranking {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 500;
}

.university-english {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.university-region {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 14rpx;
}

.university-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 14rpx;
}

.university-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background-color: #f0f8ff;
  color: #0066cc;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.university-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 加载状态 */
.loading-state {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
  border-top-color: #0066cc;
  animation: spin 0.8s linear infinite;
}

.loading-state text {
  color: #999;
  font-size: 28rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 30rpx;
  color: #666;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
} 